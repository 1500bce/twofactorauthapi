    <form method="post" class="col-sm-6">
        <div class="form-group row">
            <label asp-for="@Model.Code" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-7">
                <input asp-for="@Model.Code" class="form-control">
                <input asp-for="@Model.EmailAddress" class="form-control" type="text"><br />
                <input asp-for="@Model.SecretKey" class="form-control" type="text">
